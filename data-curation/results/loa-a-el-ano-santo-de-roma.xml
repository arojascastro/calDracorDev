    <front>
      <docAuthor>Pedro Calderón de la Barca</docAuthor>
      <docTitle>
        <titlePart type="main">Loa a El año santo de Roma</titlePart>
        <titlePart type="sub">Loa para el auto sacramental alegórico intitulado El año santo de Roma</titlePart>
        <titlePart type="sub">Primera parte</titlePart>
      </docTitle>
      <castList>
        <head>Personas</head>
        <castItem>LA GRACIA.</castItem>
        <castItem>LA NATURALEZA.</castItem>
        <castItem>DÍA 1.º</castItem>
