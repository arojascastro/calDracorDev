    <front>
      <docAuthor>Pedro Calderón de la Barca</docAuthor>
      <docTitle>
        <titlePart type="main">Las visiones de la muerte</titlePart>
        <titlePart type="sub">Mojiganga</titlePart>
      </docTitle>
