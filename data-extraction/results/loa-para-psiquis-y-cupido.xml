    <front>
      <docAuthor>Pedro Calderón de la Barca</docAuthor>
      <docTitle>
        <titlePart type="main">Loa para el auto sacramental intitulado «Psiquis y Cupido»</titlePart>
      </docTitle>
      <castList>
        <head>Personas</head>
        <castItem>LA FE.</castItem>
        <castItem>EL ENTENDIMIENTO.</castItem>
        <castItem>EMANUEL.</castItem>
        <castItem>LA GENTILIDAD.</castItem>
        <castItem>EL JUDAÍSMO.</castItem>
        <castItem>EL AFECTO DE LA GENTILIDAD.</castItem>
        <castItem>EL AFECTO DEL JUDAÍSMO.</castItem>
        <castItem>MÚSICA.</castItem>
        <castItem>[MUERTE.]</castItem>
        <castItem>[ÁNGEL.]</castItem>
